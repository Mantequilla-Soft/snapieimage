# Server Configuration
PORT=3000

# API Key for upload authentication (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
API_KEY=your_secure_api_key_here_minimum_32_characters

# Storage Configuration
UPLOAD_DIR=./uploads

# Base URL for image access (used in response URLs)
# In production, this should be your domain where nginx serves the images
BASE_URL=http://localhost:3000
